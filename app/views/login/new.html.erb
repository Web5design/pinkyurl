<h1>Login</h1>

<% form_for(@person_session, :url => login_path) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %> <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %> <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit 'Login' %>
    or <%= link_to 'Create account', new_person_path %>
  </p>
<% end %>

<%= link_to 'back', :back %>